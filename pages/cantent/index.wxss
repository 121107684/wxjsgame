/**index.wxss**/

.container {
  height: 100%;
  box-sizing: border-box;
  background: #efefef;
  padding-top: 15rpx
}
.clear{
  clear: both
}
.panel {
  width: 666rpx;
  margin:0rpx auto 22rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  padding: 20rpx
}
.panel-heading{
  height: 140rpx;
}
.panel-heading .userico{
  padding: 20rpx;
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.panel-heading .userico image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}
.panel-heading .userinfo{
  padding: 20rpx 20rpx 20rpx 0;
  float: left;
  width: 386rpx;
  height: 100rpx;
  font-size: 32rpx;
  color: #999
}
.panel-heading .userinfo .username{
  font-weight: bold;
  color: #333;
  font-size: 36rpx;
}
.panel-heading .titleset{
  float: left;
  width: 90rpx;
  height: 120rpx
}
.panel-body .imagesin{
  display: flex;
  max-height: 320rpx;
  overflow: hidden;
  border-radius: 10rpx
}
.panel-body .imagesin image{
  flex: 1;
  min-width: 210rpx;
  max-width: 100%;
}
.panel-body .infotext {
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 52rpx;
  padding: 20rpx 0
}
.otheruser {
  width: 180rpx;
  float: left
}
.otheruser image{
  width:48rpx;
  height:48rpx;
  border-radius: 24rpx;
  box-shadow: 0rpx 0rpx 8rpx #fff;
  display: block;
  float: left;
  margin-left: -16rpx
}
.otheruser image:first-child{
  margin-left: 0
}
.aboutyou {
  background-color: #f8cc21;
  height: 48rpx;
  border-radius: 24rpx;
  float: left;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  padding: 0px 24rpx;
  line-height: 48rpx;
}
.footerico {
  width: 230rpx;
  float:right;
  height: 48rpx
}
.footerico .likeyou, 
.footerico .sayyou{
  float: left;
  width:115rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  text-align: right
}
.footerico .likeyou .iconfont, 
.footerico .sayyou .iconfont{
  padding-right: 6rpx
}
.btn{
  margin-top: 200rpx;
}